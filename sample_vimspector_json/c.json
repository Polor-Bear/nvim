{
  "configurations": {
    "Launch": {
      "adapter": "vscode-cpptools",
      "filetypes": [ "cpp", "c", "objc", "rust" ],
      "configuration": {
        "request": "launch",
        "program": "${file}",
        "args": [],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "${file}"
      }
    },
    "Attach": {
      "adapter": "vscode-cpptools",
      "filetypes": [ "cpp", "c", "objc", "rust" ],
      "configuration": {
        "request": "attach",
        "program": "${file}",
        "MIMode": "lldb"
      }
    }
  }
}
